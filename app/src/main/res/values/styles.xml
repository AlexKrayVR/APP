<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="timePickerStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:selectableItemBackgroundBorderless">@color/colorAccent</item>

        <!--        <item name="android:windowIsTranslucent">true</item>-->
<!--        <item name="android:windowNoTitle">true</item>-->
        <item name="android:timePickerMode">spinner</item>

    </style>


    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground"> @drawable/splashscreen_bg</item>
    </style>


    <style name="AlertDialogInfo" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorIcons</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/forgotPassword</item>
    </style>

    <style name="textStyle">
        <item name="fontFamily">@font/sf_pro_regular</item>
    </style>

    <style name="textStyleMontserrat">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="HintColorTheme" parent="">
        <item name="android:textColorHint">#524373</item>
        <item name="colorAccent">#984EC6</item>
    </style>


    <style name="textInputLayout" parent="AppTheme">
        <item name="colorAccent">@color/hintTopTextColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="fullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AlexTextStyleMainMenu">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/voces</item>
    </style>

    <style name="Toolbar">
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:stateListAnimator">@animator/toolbar_shadow</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


